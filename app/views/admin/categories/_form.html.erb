<%= semantic_form_for [:admin, @category], :html => { :class => "filter_form", :multipart => true } do |f| %>
  <%= f.inputs "Product Information" do %>
    <%= f.input :name %>
  <% end %>

  <%= render :partial => "admin/images/form", :locals => { :form => f, :resource => @category } %>

  <%= f.actions %>
<% end %>