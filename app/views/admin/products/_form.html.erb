<%= semantic_form_for [:admin, @product], :html => { :class => "filter_form", :multipart => true } do |f| %>
  <%= f.inputs "Info" do %>
    <%= f.input :name %>
    <%= f.input :price, hint: t('admin.products.price_unit') %>
    <%= f.input :description %>
  <% end %>

  <%= f.inputs "Associations" do %>
    <%= f.input :category %>
  <% end %>

  <%= render :partial => "admin/images/form", :locals => { :form => f, :resource => @product } %>

  <%= f.actions %>
<% end %>