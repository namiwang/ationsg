<%= semantic_form_for [:admin, @banner], :html => { :class => "filter_form", :multipart => true } do |f| %>
  <%= f.inputs "Info" do %>
    <%= f.input :path, hint: t('admin.banners.path_hint') %>
  <% end %>

  <%= f.inputs "Image" do %>
    <% if f.object.images.empty? %>
      <% f.object.images.build %>
      <%= f.semantic_fields_for :images do |i| %>
        <%= i.input :attachment , as: :file, label: 'attach a new image' %>
      <% end %>
    <% else %>
      <%= image_tag f.object.images.first.attachment.url %>    
    <% end %>
  <% end %>

  <%= f.actions %>
<% end %>