<header class="container main">

  <div class="logo">
    <%= link_to main_app.root_path do %>
      <%= image_tag 'logo.png' %>
    <% end %>
  </div>

  <div class="to-stick" data-spy="affix" data-offset-top="200">
    <nav class="navbar navbar-default" role="navigation">
      <div class="container-fluid">

        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
            <span class="sr-only">TODO Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="<%= main_app.root_path %>">
            <%= image_tag 'logo.png' %>
          </a>
        </div>

        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav">
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">Categories <b class="caret"></b></a>
              <ul class="dropdown-menu">
                <% Category.all.each do |c| %>
                  <li>
                    <%= link_to c.name, main_app.category_path(c) %>
                  </li>
                <% end %>
              </ul>
            </li>
          </ul>

          <ul class="nav navbar-nav navbar-right user">
            <%= render partial: 'shared/navbar_user' %>
          </ul>

          <ul class="nav navbar-nav navbar-right cart">
            <%= render partial: 'shared/navbar_cart'  %>
          </ul>

          <ul class="nav navbar-nav navbar-right locale">
            <li>
              <% case I18n.locale %>
              <% when :en %>
                <%= link_to url_for(locale: 'zh-CN') do %>
                  <i class="fa fa-language"></i> 简体中文
                <% end %>
              <% when 'zh-CN'.to_sym %>
                <%= link_to url_for(locale: 'en') do %>
                  <i class="fa fa-language"></i> English
                <% end %>
              <% end %>
            </li>
          </ul>

        </div><!-- /.navbar-collapse -->
      </div><!-- /.container-fluid -->
    </nav>    
  </div>

</header>

