<% if user_signed_in? %>
  <li class="dropdown">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
      <span class="glyphicon glyphicon-user"></span>
      <%= current_user.name %>
      <b class="caret"></b>
    </a>
    <ul class="dropdown-menu">
      <li><%= link_to t('nav.my_orders'), main_app.orders_path %></li>
      <li><%= link_to t('nav.my_info'), main_app.my_profile_path %></li>
      <li><%= link_to t('nav.my_addresses'), 'TODO' %></li>
      <li><%= link_to t('nav.my_payments'), 'TODO' %></li>
      <li class="divider"></li>
      <li><%= link_to t('devise.navigation.sign_out'), destroy_user_session_path, {:method => "DELETE"} %></li>
    </ul>
  </li>
<% else %>
  <li class="dropdown">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
      <span class="glyphicon glyphicon-user"></span>
      <%= t 'devise.navigation.not_signed_in' %>
      <b class="caret"></b>
    </a>
    <ul class="dropdown-menu">
      <li><%= link_to t('devise.navigation.sign_in'), user_session_path %></li>
      <li><%= link_to t('devise.navigation.sign_up'), new_user_registration_path %></li>
    </ul>
  </li>
<% end %>
