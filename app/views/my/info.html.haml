= form_for @user, url: {action: 'info_update'}, html: {class: 'form-horizontal', role: 'form'} do |f|
  .form-group
    = f.label :email, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.email_field :email
  .form-group
    = f.label :name, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.text_field :name
  .form-group
    = f.label :phone, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.phone_field :phone
  .form-group
    .col-sm-offset-2.col-sm-10
      = f.submit (t 'common.save'), class: 'btn btn-default'
