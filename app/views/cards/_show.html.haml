.card-show.item
  %aside
    .avatar
      %i.fa.fa-credit-card      
  .content
    %form.form-horizontal
      .form-group
        %label.col-sm-2.control-label
          = Card.human_attribute_name 'id'
        .col-sm-10
          %p.form-control-static= card.id
      .form-group
        %label.col-sm-2.control-label
          = Card.human_attribute_name 'balance'
        .col-sm-10
          %p.form-control-static= to_sg_dollar card.balance
      .form-group
        .col-sm-offset-2.col-sm-10
          = link_to (t 'cards.recharge'), recharge_card_path(card), class: 'btn btn-primary'
