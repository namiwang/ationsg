- case cart_item[:type]
- when 'product'
  .cart-item-card
    .image
      = image_tag('http://placehold.it/64x64', size: '64x64', class: 'media-object')
    .content
      %h1= cart_item[:product].name
      %p= cart_item[:product].description.truncate(100)
      %p.detail= to_sg_dollar cart_item[:product].price
