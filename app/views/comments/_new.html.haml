= form_for @new_comment, url: comments_path(@new_comment), html: {class: 'comment new form-horizontal', multipart: true} do |f|
  = hidden_field_tag :product_id, @product.id
  .form-group
    = f.label :comment, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.text_area :comment, class: 'form-control'
  .form-group
    .col-sm-offset-2.col-sm-10
      .btn-group
        - @new_comment.images.build
        %button.btn.btn-default{type: 'button'}
          .field-for-input-file
            = f.fields_for :images do |i|
              = i.file_field :attachment
          TODO
        = f.submit (t 'common.submit'), class: 'btn btn-default'

